    "test:critical": "node test_optimized_prompts.js",
    "backup": "cp server.js server_backup.js",
    "switch": "mv server.js server_old.js && mv server_new.js server.js && mv server_old.js server_new.js"
  },
  "keywords": [
    "公平竞争",
    "审查",
